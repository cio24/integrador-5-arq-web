<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="Example">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>arq.web.integrador5.entities.Student</class>
        <properties>
            <!--  Propiedades de configuracion de JDBC para Postgres	-->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
            <!-- Cambiar el time zone -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgres://localhost:5432/example?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="example" />

            <!-- Propiedad para la generacion automatica del esquema de base de datos -->
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
            <property name="show_sql" value="true"/>

        </properties>
    </persistence-unit>

</persistence>